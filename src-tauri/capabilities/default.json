{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "fs:default",
    "fs:allow-copy-file",
    "fs:read-all",
    "fs:write-all",
    "opener:allow-open-path",
    "dialog:default",
    {
      "identifier": "opener:allow-open-path",
      "allow": [
        {
          "path": "$APPDATA"
        },
        {
          "path": "$APPDATA/../**"
        },
        {
          "path": "*"
        },
        {
          "path": "**"
        },
        {
          "path": "$APPDATA/**"
        }
      ]
    },
    {
      "identifier": "fs:default",
      "allow": [
        {
          "path": "$APPDATA"
        },
        {
          "path": "$APPDATA/../**"
        },
        {
          "path": "*"
        },
        {
          "path": "**"
        },
        {
          "path": "$APPDATA/**"
        }
      ]
    },
    {
      "identifier": "fs:read-all",
      "allow": [
        {
          "path": "$APPDATA"
        },
        {
          "path": "$APPDATA/../**"
        },
        {
          "path": "*"
        },
        {
          "path": "**"
        },
        {
          "path": "$APPDATA/**"
        }
      ]
    },
    {
      "identifier": "fs:read-dirs",
      "allow": [
        {
          "path": "$APPDATA"
        },
        {
          "path": "$APPDATA/../**"
        },
        {
          "path": "*"
        },
        {
          "path": "**"
        },
        {
          "path": "$APPDATA/**"
        }
      ]
    },
    {
      "identifier": "fs:write-all",
      "allow": [
        {
          "path": "$APPDATA"
        },
        {
          "path": "$APPDATA/../**"
        },
        {
          "path": "*"
        },
        {
          "path": "**"
        },
        {
          "path": "$APPDATA/**"
        }
      ]
    }
  ]
}